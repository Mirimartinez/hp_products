{% extends 'base.html.twig' %}

{% block body %}
        <header id="header" class="d-flex align-items-center">
            <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1 class="text-light"><a href="{{ path('homepage')}}"><span>The Wiz Store</span></a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                <li><a class="nav-link scrollto" href="{{ path('cms_page_index')}}">Pages</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_category_index')}}">Categories</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_user_index')}}">Users</a></li>
                <li><a class="nav-link scrollto" href="{{ path('homepage')}}">Log out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

            </div>
        </header>

    <h1 class="text-light text-center my-5 pt-5">Page list</h1>


<div class="d-flex flex-row flex-wrap justify-content-evenly gx-5 mx-5">
			{% for page in pages %}
		<div class="card my-3 rounded" style="width: 18rem; height:25rem;">
  			<img class="card-img-top rounded-top" src="{{ asset('img/hero2.jpg') }}"  alt="Card image cap" style="width: 18rem; height:13rem;">
            <div class="card-body text-center">
            <h4 class="card-title"><a href="{{ path('cms_page_show', { 'id': page.id }) }}">{{ page.name }}</a></h4>
            <p class="card-text fs-6">({{ page.category}})</p>
            <p class="card-text">{{ page.content|slice(0,35)}}</p>
            <!-- <a href="#" class="btn btn-primary">Add to cart</a> -->
            <div class="d-flex justify-content-evenly">
            <a href="{{ path('cms_page_show', { 'id': page.id }) }}" type="button" class="btn btn-card" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true">Manage</span>
					</a>
					<a href="{{ path('cms_page_edit', { 'id': page.id }) }}" type="button" class="btn btn-card" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true">Update</span>
					</a>
            </div>
            </div>
		</div>
        	{% endfor %}
      	</div>

        <div class="d-flex justify-content-center">
    <a class="btn btn-primary btn-create mb-5 mt-3" href="{{ path('cms_page_new') }}">Create a new entry</a>
        </div>

{% endblock %}