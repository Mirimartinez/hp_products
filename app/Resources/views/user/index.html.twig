{% extends 'base.html.twig' %}

{% block body %}
  <header id="header" class="d-flex align-items-center">
            <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1 class="text-light"><a href="{{ path('homepage')}}"><span>The Wiz Store</span></a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                <li><a class="nav-link scrollto" href="{{ path('cms_page_index')}}">Pages</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_category_index')}}">Categories</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_user_index')}}">Users</a></li>
                <li><a class="nav-link scrollto" href="{{ path('homepage')}}">Log out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

            </div>
        </header>

    <h1 class="text-light text-center my-5 pt-5">User list</h1>
    <div class="text-center col-md-4 offset-md-4">
	<table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('cms_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.password|slice(0,20) }}</td>
                <td>
                    <div class="d-flex justify-content-evenly">
					<a href="{{ path('cms_user_show', { 'id': user.id }) }}" type="button" class="btn btn-card" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true">Manage</span>
					</a>
					<a href="{{ path('cms_user_edit', { 'id': user.id }) }}" type="button" class="btn btn-card" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true">Update</span>
					</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
        <div class="d-flex justify-content-center my-5">
	        <a class="btn btn-primary" href="{{ path('cms_user_new') }}">Create a new entry</a>
        </div>
{% endblock %}