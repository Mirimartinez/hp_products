{% extends 'base.html.twig' %}

{% block body %}
        <header id="header" class="d-flex align-items-center">
            <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1 class="text-light"><a href="{{ path('homepage')}}"><span>The Wiz Store</span></a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                <li><a class="nav-link scrollto" href="{{ path('cms_page_index')}}">Pages</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_category_index')}}">Categories</a></li>
                <li><a class="nav-link scrollto" href="{{ path('cms_user_index')}}">Users</a></li>
                <li><a class="nav-link scrollto" href="{{ path('homepage')}}">Log out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

            </div>
        </header>

<div class="login-box1 text-light">
    <h1 class="text-center">Category creation</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
			<label class="col-md-4 control-label">Name</label>
			<div class="my-3">
			  {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        <div class="form-group">
			<div class="d-flex justify-content-center">
			  <button type="submit" class="btn btn-primary">Create</button>
			</div>
			<div class="d-flex justify-content-end">
			  <a class="btn btn-default text-light" href="{{ path('cms_category_index') }}" role="button">Back to the list</a>
			</div>
		</div>
    {{ form_end(form) }}
</div>

{% endblock %}